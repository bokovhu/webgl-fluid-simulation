{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "preserve",
        "allowJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "./src/**/*.vertex",
        "./src/**/*.fragment",
        "./src/**/*.glsl"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}